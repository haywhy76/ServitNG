<% include ../partials/header %>

<div class="ui main text container">
        <div class="completeregistrationheading">EDIT PROFILE</div>
        <form class="ui form form col-xs-12" action="/settings/<%=settings._id %>?_method=PUT" method="POST"> 
               
        <div class="field">
                <input type="text" name="editsettings[fullname]" placeholder="Firstname Surname" value="<%= settings.fullname %>">
        </div>
        <div class="field">
                <input type="email" name="editsettings[email]" placeholder="email address"  value="<%= settings.email %>">
        </div>

        <div class="field">
                <input type="text" name="editsettings[location]" placeholder="location (State)" value="<%= settings.location %>">
        </div>
        <div class="field">
                <input type="text" name="editsettings[phonenumber]" placeholder="phone number" value="<%= settings.phonenumber %>">
        </div>
        
        <div class="field">
                <input type="text" name="editsettings[username]" value="<%= currentUser.username %>" readonly>
        </div>
        
        <div class="field">
                <input type="password" name="editsettings[password]" placeholder="password">
        </div>
        
        
        <p class="itcorperscompleteregbutton"><button type="submit" class="btn btn-default btn-lg loginsubmitbutton">UPDATE </button></p>
        
        </form>
</div>
