<% include ./partials/header %>


<div class="container logincontainer">
        <div class="row">
                <div class=" registerbox col-md-5 col-sm-12 col-xs-12">
                        <div class="registerboxheading">CREATE AN ACCOUNT</div>
                        <form class="ui form form col-md-12 col-xs-12 registerform" action="/register" method="POST"> 

                        <div class="field">
                                <input type="text" name="username" placeholder="username" required>
                        </div>
                        <div class="field">
                                <input type="text" name="email" placeholder="email" required>
                        </div>
                        <div class="field">
                                <input type="password" name="password" placeholder="password" required>
                        </div>
                        
                
                        <button type="submit" class="btn btn-default btn-lg registersubmitbutton">SUBMIT </button>
                        <p class="undersubmitbutton">Have an account? <a href="/login">Login</a></p>
                        
                        </form>
        </div>

        <div class="col-md-7 registerpageimage">
                <img alt="Image" height="420" width="600" src="/images/registerpageimage.jpg">
        </div>

     </div>         
</div>

<% include ./partials/footer %>